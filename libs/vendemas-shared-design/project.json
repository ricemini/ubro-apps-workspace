{
  "name": "vendemas-shared-design",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/vendemas-shared-design/src",
  "prefix": "vendemas",
  "tags": [
    "scope:design",
    "type:lib",
    "category:design",
    "domain:design-system",
    "framework:agnostic"
  ],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/vendemas-shared-design",
        "main": "libs/vendemas-shared-design/src/index.ts",
        "tsConfig": "libs/vendemas-shared-design/tsconfig.lib.json",
        "assets": ["libs/vendemas-shared-design/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/vendemas-shared-design"
      }
    }
  }
}
