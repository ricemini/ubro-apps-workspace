{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "paths": {
      "@vendemas/*": ["libs/*"],
      "@vendemas/ng-mobile/*": ["apps/vendemas-ng-mobile/*"],
      "@vendemas/nx-dashboard/*": ["apps/vendemas-nx-dashboard/*"],
      "@vendemas/rn-mobile/*": ["apps/vendemas-rn-mobile/*"]
    }
  }
}
